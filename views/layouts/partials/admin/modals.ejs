<!-- add transaction Modal -->
<div class="modal fade" id="addTransaction" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
	aria-hidden="true">
	<div class="modal-dialog form-dark" role="document">
		<!--Content-->
		<div class="modal-content card card-image"
		style="">
			<div class="text-white rgba-stylish-strong py-5 px-5 z-depth-4">
				<!--Header-->
				<div class="modal-header text-center pb-4">
					<h3 class="modal-title w-100 white-text font-weight-bold" id="myModalLabel"><strong>SEND</strong> <a
							class="green-text font-weight-bold"><strong> MONEY</strong></a></h3>
					<button type="button" class="close white-text" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<!--Body-->
				<div class="modal-body">
					<!--Body-->
					<form action="/add-transctions" method="post">
						<div class="md-form mb-5">
							<input type="text" id="Form-email5" name="senderName"
								class="form-control validate white-text" required>
							<label data-error="wrong" data-success="right" for="Form-email5">Sender Name</label>
						</div>

						<div class="md-form mb-5">
							<input type="text" id="Form-email5" name="senderID"
								class="form-control validate white-text">
							<label data-error="wrong" data-success="right" for="Form-email5">Sender Name</label>
						</div>

						<div class="md-form md5">
							<input type="number" id="Form-pass5" name="senderNumber"
								class="form-control validate white-text">
							<label data-error="wrong" data-success="right" for="Form-pass5">Sender Number</label>
						</div>

						<div class="md-form md5">
							<input type="text" id="Form-pass5" name="senderAddress"
								class="form-control validate white-text">
							<label data-error="wrong" data-success="right" for="Form-pass5">Sender Address</label>
						</div>

						<div class="md-form md5">
							<input type="text" id="Form-pass5" name="receiverName"
								class="form-control validate white-text">
							<label data-error="wrong" data-success="right" for="Form-pass5">Reciever Name</label>
						</div>

						<div class="md-form md5">
							<input type="text" id="Form-pass5" name="receiverID"
								class="form-control validate white-text">
							<label data-error="wrong" data-success="right" for="Form-pass5">Receiver ID</label>
						</div>

						<div class="md-form md5">
							<input type="text" id="Form-pass5" name="receiverAddress"
								class="form-control validate white-text">
							<label data-error="wrong" data-success="right" for="Form-pass5">Receiver Address</label>
						</div>

						<div class="md-form md5">
							<input type="text" id="Form-pass5" name="receiverNumber"
								class="form-control validate white-text">
							<label data-error="wrong" data-success="right" for="Form-pass5">Receiver Number</label>
						</div>

						<div class="md-form md5">
							<input type="text" id="Form-pass5" name="amount" class="form-control validate white-text">
							<label data-error="wrong" data-success="right" for="Form-pass5">Amount</label>
						</div>
						
						<div class="row d-flex align-items-center mb-4">
							<div class="text-center mb-3 col-md-12">
								<button type="submit" class="btn aqua-gradient btn-block btn-rounded z-depth-1">Send</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
		
	</div>
</div>






